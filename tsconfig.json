{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@shared/*": ["../shared/*"], // ✅ Map to shared folder
      "@controllers/*": ["src/controllers/*"],
      "@database/*": ["src/database/*"],
      "@middleware/*": ["src/middleware/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["../shared/types/*"] // ✅ Shared types
    },
    "typeRoots": ["./src/types", "./shared/types"] // ✅ Add shared types
  },
  "include": ["src", "shared"], // ✅ Include both src and shared
  "exclude": ["node_modules", "dist"]
}